<h2 class='subtitle'>Invoice Index Page</h2>

<div>
  <% @invoices.each do |invoice| %>
    <div class='index_invoice' id="inv-<%= invoice.id%>">
      Invoice # <%=link_to"#{invoice.id}", admin_invoice_path(invoice.id) %>
      Created: <%= invoice.created_at.strftime("%A, %B %d, %Y") %>
    </div>
  <% end  %>
</div>
