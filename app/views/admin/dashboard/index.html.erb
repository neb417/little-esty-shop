<h1> Admin Dashboard </h1>
<p><%= link_to "Merchants", admin_merchants_path, method: :get%></p>
<p><%= link_to "Invoices", admin_invoices_path, method: :get%></p>

<h3> Top 5 Customers </h3>
<% @top_customers.each do |customer| %>
  <p><%= customer.first_name + ' ' + customer.last_name %>
  <%= customer.transaction_count %> Purchases </p>
<% end %>

<h3> Incomplete Invoices </h3>
<% @incomplete_invoices.each do |invoice| %>
<p><%= link_to "#{invoice.id}", admin_invoice_path(invoice.id), method: :get %></p>
<p> Date Created: <%= "#{invoice.created_at.strftime("%A, %B %-d, %Y")}" %></p>
<% end %>
