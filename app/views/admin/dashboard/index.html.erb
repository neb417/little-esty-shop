<%= link_to "Merchants", admin_merchants_path, method: :get%>
<%= link_to "Invoices", admin_invoices_path, method: :get%>

<h2 class='subtitle'> Admin Dashboard </h2>
<div id='index_body'>

  <div class="index_column">
    <strong> Incomplete Invoices </strong>
    <% @incomplete_invoices.each do |invoice| %>
      <p>Invoice #<%= link_to "#{invoice.id}", admin_invoice_path(invoice.id), method: :get %>
         Created: <%= "#{invoice.created_at.strftime("%A, %B %-d, %Y")}" %></p>
    <% end %>
  </div>

  <div class="index_column">
    <strong> Top 5 Customers </strong>
    <% @top_customers.each do |customer| %>
      <p><%= customer.first_name + ' ' + customer.last_name %>
      <%= customer.transaction_count %> Purchases </p>
    <% end %>
  </div>

</div>